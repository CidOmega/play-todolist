# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                        controllers.Application.index

# Tasks
GET     /tasks                   controllers.Application.tasks
GET     /tasks/:id               controllers.Application.getTaskId(id: Long)
POST    /tasks                   controllers.Application.createTaskId
DELETE  /tasks/:id               controllers.Application.deleteTaskId(id: Long)

#UI
GET     /ui                      controllers.Application.ui_main
POST    /ui                      controllers.Application.ui_newTask
POST    /ui/:id/delete           controllers.Application.ui_deleteTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file            controllers.Assets.at(path="/public", file)
